generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  idAdmin      Int      @id @default(autoincrement())  
  email        String
  password     String
  isSuperAdmin Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Siswa {
  idSiswa   String   @id
  nama      String
  kelas     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  kehadiran Kehadiran[]
}

model Informasi {
  idInformasi Int      @id @default(autoincrement())
  tahunAjaran String
  semester    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Kehadiran {
  idKehadiran Int      @id @default(autoincrement())
  kehadiran   String @default("")
  tipe        String
  waktu       DateTime @default(now())
  tahunAjaran String
  semester    String
  idSiswa     String
  siswa       Siswa    @relation(fields: [idSiswa], references: [idSiswa])
}

model Petugas {
  idPetugas Int      @id @default(autoincrement())
  nama      String
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
